                                                    {
                                                        @id = "potentialRevenueInput",
                                                        @class = "form-control form-control-solid",
                                                        placeholder = "Enter Potential Revenue",
                                                        @type = "number",
                                                        step = "0.01"
                                                    })
                                        </div>
                                        <div class="fv-row mb-10">
                                            <label for="projectCostInput" class="required form-label">Project Cost ($)</label>
                                            <span class="ms-1" data-bs-toggle="tooltip" title="This column refers to the cost of the project in USD">
                                                @Html.TextBoxFor(m => m.NilaiProyek, new
                                                    {
                                                        @id = "projectCostInput",
                                                        @class = "form-control form-control-solid",
                                                        placeholder = "Enter Project Cost",
                                                        @type = "number",
                                                        step = "0.01"
                                                    })
                                        </div>
                                        <div class="fv-row mb-10">
                                            <label for="hubInput" class="required form-label">Hub</label>
                                            <span class="ms-1" data-bs-toggle="tooltip" title="This column refers to the Hub of the project">
                                                @Html.DropDownListFor(x => x.HubId,
                                                         new MultiSelectList(Enumerable.Empty<SelectListItem>()),
                                                         new
                                                         {
                                                             @id = "hubInput",
                                                             @class = "form-select form-select-solid form-select-lg fw-semibold",
                                                             aria_label = "hubInput",
                                                             data_control = "select2",
                                                             data_placeholder = "Choose Hub",
                                                             data_allow_clear = "true"
                                                         })
                                        </div>
                                        <div class="fv-row mb-10">
                                            <label for="hubHeadInput" class="required form-label">Hub Head</label>
                                            <span class="ms-1" data-bs-toggle="tooltip" title="This column refers to the Hub Head of the project">
                                                @Html.DropDownListFor(x => x.HubId,
                                                         new MultiSelectList(Enumerable.Empty<SelectListItem>()),
                                                         new
                                                         {
                                                             @id = "hubHeadInput",
                                                             @class = "form-select form-select-solid form-select-lg fw-semibold",
                                                             aria_label = "hubHeadInput",
                                                             data_control = "select2",
                                                             data_placeholder = "Enter Hub Head",
                                                             data_allow_clear = "true"
                                                         })
                                        </div>
                                        <div class="fv-row mb-10">
                                            <label for="kementrianLembagaInput" class="required form-label">Keterlibatan Kementrian dan/atau Lembaga</label><label style="padding-left: 10px;color: red;font-weight: bold;">Dapat pilih lebih dari 1</label>
                                            @Html.DropDownListFor(x => x.KementrianLembagaId,
                                                     new MultiSelectList(Enumerable.Empty<SelectListItem>()),
                                                     new
                                                     {
                                                         @id = "kementrianLembagaInput",
                                                         @class = " form-control form-select form-select-solid form-select-lg",
                                                         aria_label = "kementrianLembagaInput",
                                                         data_control = "select2",
                                                         data_placeholder = "Pilih Kementrian",
                                                         data_allow_clear = "true"
                                                     })
                                        </div>
                                        <div class="fv-row mb-10">
                                            <label for="deskripsiKementrianLembagaInput" class=" form-label">Deskripsi Kementrian dan/atau Lembaga</label>
                                            @Html.TextAreaFor(m => m.DeskripsiKementrianLembaga, new
                                                {
                                                    @id = "deskripsiKementrianLembagaInput",
                                                    @class = "form-control form-control-solid",
                                                    placeholder = "Masukkan Deskripsi Kementrian dan/atau Lembaga",
                                                    maxlength = 6000
                                                })
                                        </div>

                                    </div>
                                </div>
                            </div>
                        </div>
