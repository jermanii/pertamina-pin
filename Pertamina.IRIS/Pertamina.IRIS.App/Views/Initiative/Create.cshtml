                                                             aria_label = "streamBusinessInputOpportunity",
                                                             data_control = "select2",
                                                             data_placeholder = "Choose Stream Business",
                                                             data_allow_clear = "true"
                                                         })
                                        </div>
                                        <div class="fv-row mb-10">
                                            <label for="initiativeStatusInput" class="required form-label">Initiative Status</label>
                                            <span class="ms-1" data-bs-toggle="tooltip" title="This column refers to the status of this project">
                                                @Html.DropDownListFor(x => x.InitiativeStatusId,
                                                         new MultiSelectList(Enumerable.Empty<SelectListItem>()),
                                                         new
                                                         {
                                                             @id = "initiativeStatusInput",
                                                             @class = "form-select form-select-solid form-select-lg fw-semibold",
                                                             aria_label = "initiativeStatusInput",
                                                             data_control = "select2",
                                                             data_placeholder = "Choose Initiative Status",
                                                             data_allow_clear = "true"
                                                         })
                                        </div>
                                        <div class="fv-row mb-10">
                                            <label for="projectDescriptionInput" class=" form-label">Description</label>
                                            <span class="ms-1" data-bs-toggle="tooltip" title="This column refers to the scope, progress, issues/challenges, and potential escalations (if any)">
                                                @Html.TextAreaFor(m => m.ValueForIndonesia, new
                                                    {
                                                        @id = "projectDescriptionInput",
                                                        @class = "form-control form-control-solid",
                                                        placeholder = "Enter Description",
                                                        maxlength = 6000
                                                    })
                                        </div>

                                        <div id="addRepeaterPartner" class="fv-row mb-10">
