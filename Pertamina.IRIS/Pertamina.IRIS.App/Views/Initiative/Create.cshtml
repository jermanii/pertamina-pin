@using Pertamina.IRIS.Models.Base
@inject GlobalVariableBaseModel globalParam
@model Pertamina.IRIS.Models.ViewModels.InitiativeViewModel

@section Styles {
    <link href="~/css/custom.css" rel="stylesheet" type="text/css" />
}

@{
    ViewData["Title"] = "Initiative";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var controllerName = this.ViewContext.RouteData.Values["controller"].ToString();
}

<div class="app-main flex-column flex-row-fluid">
    <div class="d-flex flex-column flex-column-fluid">
        <div class="app-toolbar py-3 py-lg-6">
            <div class="app-container container-xxl d-flex flex-stack">
                <div class="page-title d-flex flex-column justify-content-center flex-wrap me-3">
                    <h1 class="page-heading d-flex text-dark fw-bold fs-3 flex-column justify-content-center my-0">ADD INITIATIVE </h1>
                </div>
            </div>
        </div>
        <div class="app-content flex-column-fluid" style="padding-bottom: 1px;">
            <div class="app-container container-xxl">
                <div class="card card-custom">
                    <div class="card-header">
                        <div class="row">
                            <h3 class="card-title">
                                PILIH CARA MEMBUAT INITIATIVE
                            </h3>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="form-group row">
                            <div class="col-lg-6">
                                <div class="fv-row mb-10">
                                    <label for="sumberPengisianInput" class="required form-label">Pilih Sumber Pengisian Data</label>
                                    @Html.DropDownListFor(x => x.SelectedFormType,
                                             new MultiSelectList(Enumerable.Empty<SelectListItem>()),
                                             new
                                             {
                                                 @id = "sumberPengisianInput",
                                                 @class = " form-control form-select form-select-solid form-select-lg",
                                                 aria_label = "sumberPengisianInput",
                                                 data_control = "select2",
                                                 data_placeholder = "Pilih Sumber Pengisian Data",
                                                 data_allow_clear = "true"
                                             })
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="fv-row mb-10">
                                    <label for="judulInput" class="required form-label">Pilih Judul</label>
                                    @Html.DropDownListFor(x => x.OpportunityId,
                                             new MultiSelectList(Enumerable.Empty<SelectListItem>()),
                                             new
                                             {
                                                 @id = "judulInput",
                                                 @class = "form-select form-select-solid form-select-lg fw-semibold",
                                                 aria_label = "Pilih Judul",
                                                 data_control = "select2",
                                                 data_placeholder = "Pilih Judul ",
                                                 data_allow_clear = "true",
                                                 maxlength = 1000,
                                             })
                                </div>

                            </div>

                        </div>
                    </div>
                </div>
                <div class="row mb-2" style="padding-right: 10px;">
                    <div class="col-lg-12 d-flex justify-content-end pb-0 px-0" style="padding-top: 6px;">
                        <button id="btnCancel" type="submit" class="btn font-weight-bold btn-secondary" onclick="location.href='@Url.Action("Index","Initiative")'">
                            Back
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <div id="CreateBlankInitiative" class="app-container container-xxl">
            <form id="AddInitiative" class="form" action="#" autocomplete="off">
                <div class="row">
                    <div class=" row">
                        <div class="col-lg-6">
                            <div class="row">
                                <div class="card card-custom">
                                    <div class="card-header">
                                        <div class="row">
                                            <h3 class="card-title">
                                                Project Details :
                                            </h3>
                                        </div>
                                    </div>
                                    <div class="card-body">
                                        <div class="fv-row mb-10">
                                            <label for="projectNameInput" class="required form-label">Project Name</label>
                                            <span class="ms-1" data-bs-toggle="tooltip" title="This column refers to the title/name of the project">
                                                <i class="ki-duotone ki-information-5 text-gray-500 fs-6">
                                                    <span class="path1"></span>
                                                    <span class="path2"></span>
                                                    <span class="path3"></span>
                                                </i>
                                            </span>
                                            @Html.TextBoxFor(m => m.ProjectName, new
                                                {
                                                    @id = "projectNameInput",
                                                    @class = "form-control form-control-solid",
                                                    placeholder = "Enter Project Name"
                                                })
                                        </div>
                                        <div class="fv-row mb-10">
                                            <label for="streamBusinessInputOpportunity" class="required form-label">Stream Business</label><label style="padding-left: 10px;color: red;font-weight: bold;">Dapat pilih lebih dari 1</label>
