                            }
                            else
                            {
                                <span class="fw-bold fs-6 text-gray-800">:</span>
                            }
                        </div>
                        <!--end::Col-->
                    </div>
                    <div class="row mb-7">
                        <!--begin::Label-->
                        <label class="col-lg-4 fw-semibold text-muted">Remarks </label>
                        <!--end::Label-->
                        <!--begin::Col-->
                        <div class="col-lg-8">
                            @if (Model.Remark != null)
                            {
                                <span class="fw-bold fs-6 text-gray-800">: @Model.Remark</span>
                            }
                            else
                            {
                                <span class="fw-bold fs-6 text-gray-800">:</span>
