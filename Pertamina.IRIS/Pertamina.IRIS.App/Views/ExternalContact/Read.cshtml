                    <div class="row mb-2">
                        <div class="col-lg-12 d-flex justify-content-end pb-0 px-0">
                            <button id="btnCancel" type="submit" class="btn font-weight-bold btn-secondary" onclick="location.href='@Url.Action("Index","ExternalContact")'">
                                Back
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>