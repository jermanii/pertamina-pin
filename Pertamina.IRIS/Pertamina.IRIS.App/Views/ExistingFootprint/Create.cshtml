                    <h1 class="page-heading d-flex text-dark fw-bold fs-3 flex-column justify-content-center my-0">Add Existing Footprints</h1>
                </div>
            </div>
        </div>
        <div class="app-content flex-column-fluid">
            @* @Html.HiddenFor(x => x.Id, new { @id = "id" }) *@
            <div class="app-container container-xxl">
                <form id="CreateFormExistingFootprints" class="form" action="#" autocomplete="off">
                    <div class="row">
                        <div class=" row">
                            <div class="col-lg-6">
                                <div class="row">
                                    <div class="card card-custom">
                                        <div class="card-header">
                                            <div class="row">
                                                <h3 class="card-title">
                                                    HEADER
                                                </h3>
                                            </div>
                                        </div>
                                        <div class="card-body">
                                            <div class="fv-row mb-10">
                                                <input type="hidden" value="@Model.StreamBusinessId" id="hdnStreamBusinessInput"></input>
                                                <label for="streamBusinessInputs" class="required form-label">Stream Business</label>
                                                <span class="ms-1" data-bs-toggle="tooltip" title="This column refers to the stream of the project">
                                                    <i class="ki-duotone ki-information-5 text-gray-500 fs-6">
                                                        <span class="path1"></span>
                                                        <span class="path2"></span>
                                                        <span class="path3"></span>
                                                    </i>
                                                </span>
