                                                                                    {
                                                                                        @id = "ebitdaOperatingMetrics",
                                                                                        @class = "form-control EbitdaOM",
                                                                                        maxlength = 15,
                                                                                        @type = "text",
                                                                                        placeholder = "Enter EBITDA"
