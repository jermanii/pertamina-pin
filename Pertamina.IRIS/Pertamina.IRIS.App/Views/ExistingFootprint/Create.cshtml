@section Scripts {
    <script>
        var param = (function (param) {
            param.prefix = '@globalParam.PrefixApiUrl';
            param.getExistingFootprintsById = '@globalParam.PrefixApiUrl' + "ApiExistingFootprints/GetExistingFootprintsById";
            param.getYearOperatingMetricById = '@globalParam.PrefixApiUrl' + "ApiExistingFootprints/GetYearOperatingMetricById";
            param.dataGrid = '@globalParam.PrefixApiUrl' + 'ApiExistingFootprints/ListOperatingMetricById' + '?guid=' + '@(Model.Id)';
            param.urlAction = '@controllerName/';
            param.updateGrid = '@Url.Action("UpdatePartial", "ExistingFootprint")';
            param.deleteGrid = '@Url.Action("DeleteOperatingMetric", "ExistingFootprint")';
            return param
        })(param || {});
        var emptyGuid = '@Guid.Empty.ToString()';
