                                                        <span class="ms-1" data-bs-toggle="tooltip" title="This column refers to the level of PIC">
                                                            <i class="ki-duotone ki-information-5 text-gray-500 fs-6">
                                                                <span class="path1"></span>
                                                                <span class="path2"></span>
                                                                <span class="path3"></span>
                                                            </i>
                                                        </span>
                                                        @Html.HiddenFor(x => x.PicLevelId, new { @id = "picLevelId" })
                                                        @Html.TextBoxFor(x => x.PicLevelName,
                                                                 new
                                                                 {
                                                                     @id = "picLevelInput",
                                                                     @name = "PicLevelId",
                                                                     @class = "form-control form-control-solid",
                                                                     maxlength = 6000,
                                                                     placeholder = "Choose PIC Level",
                                                                     @readonly = "readonly",
                                                                     data_dropdown_parent = "#CreateFormExistingFootprints"
                                                                 })
                                                    </div>
                                                </div>
                                                <div class="form-group row  mt-5">
                                                    <div id="addRepeaterPic">
                                                        @Html.HiddenFor(x => x.PicLevelMemberId, new { @id = "picLevelMemberId" })
                                                        <div class="form-group">
                                                            <div data-repeater-list="PicName">
                                                                <div data-repeater-item class="pic mb-2">
                                                                    <div class="form-group row">
                                                                        <div class="fv-row col-lg-5 picFungsi">
                                                                            @* <label for="picFungsiMemberInput" class="required form-label">Partner(s)</label> *@
                                                                            @Html.DropDownListFor(x => x.PicFungsi.PicFungsiId,
                                                                                     new MultiSelectList(Enumerable.Empty<SelectListItem>()),
                                                                                     new
                                                                                     {
                                                                                         @id = "picFungsiMemberInput",
                                                                                         @name = "PicMemberFungsiId",
                                                                                         @class = "form-select form-select-solid form-select-md fw-semibold fungsiPicMember",
                                                                                         aria_label = "Choose PIC - Function - Company",
                                                                                         data_placeholder = "Choose PIC - Function - Company",
                                                                                     })
                                                                        </div>
                                                                        <div class="fv-row col-lg-5">
                                                                            @Html.TextBoxFor(x => x.PicLevelNameMember,
                                                                                     new
                                                                                     {
                                                                                         @id = "picLevelMemberInput",
                                                                                         @name = "PicMemberLevelId",
                                                                                         @class = "form-control form-control-solid levelPicMember",
                                                                                         maxlength = 6000,
                                                                                         placeholder = "Choose PIC Level",
                                                                                         @readonly = "readonly",
                                                                                         data_dropdown_parent = "#CreateFormExistingFootprints"
