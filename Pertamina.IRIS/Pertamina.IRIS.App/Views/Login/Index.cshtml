@{
    ViewData["Title"] = "Log In - PIN";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<div class="d-flex flex-column flex-root">
    <div class="d-flex flex-column flex-column-fluid">
        <div class="d-flex flex-center flex-column-fluid justify-content-center justify-content-lg-end p-12">
            <div class="bg-body d-flex flex-column flex-center rounded-4 w-md-400px p-10" style="height:200px">
                <div class="d-flex flex-center flex-column align-items-stretch h-lg-100 w-md-300px">
                    <div class="d-flex flex-center flex-column flex-column-flux=d">
                        <form>
                            <img style="width:300px" src="img/logo-pertamina.png" />
                            <span class="w-125px text-gray-500 fw-semibold fs-7">Sign In to your account</span>
                            <div class="d-grid mb-10">
                                <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("Submit", "Login")'">
                                    <span class="indicator-label" >Login</span>
                                    <span class="indicator-progress">
                                        Please wait...
                                        <span class="spinner-border spinner-border-sm align-middle ms-2"></span>
                                    </span>
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>